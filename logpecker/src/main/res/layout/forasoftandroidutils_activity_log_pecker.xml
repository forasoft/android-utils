<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/forasoftandroidutils_log_pecker_activity_title"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:ellipsize="end"
        android:fontFamily="sans-serif-medium"
        android:gravity="center_vertical"
        android:maxLines="1"
        android:paddingHorizontal="16dp"
        android:textColor="@android:color/white"
        android:textSize="20sp"
        tools:text="My application logs" />

    <ListView
        android:id="@+id/forasoftandroidutils_log_pecker_file_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:divider="@drawable/forasoftandroidutils_log_pecker_file_divider"
        android:listSelector="@android:color/transparent"
        android:padding="16dp"
        android:scrollbars="none"
        tools:listitem="@layout/forasoftandroidutils_log_pecker_file_item" />

</LinearLayout>
